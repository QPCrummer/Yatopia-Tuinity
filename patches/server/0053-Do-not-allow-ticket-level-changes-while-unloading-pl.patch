                 if ((removed = this.pendingUnload.remove(i, playerchunk)) && ichunkaccess != null) { // Tuinity end
@@ -1077,6 +1086,7 @@ public class PlayerChunkMap extends IChunkLoader implements PlayerChunk.d {
